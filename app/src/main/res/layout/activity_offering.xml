<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OfferingActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_38sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        app:cardElevation="@dimen/_15sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/_15sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Suggestion"
                android:textStyle="italic"
                android:textSize="@dimen/_23sdp"
                android:textAlignment="center"
                android:textColor="@color/teal_700"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:src="@drawable/uploading"
                android:id="@+id/uploadImage"
                android:layout_marginTop="@dimen/_8sdp"
                android:scaleType="fitXY"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:id="@+id/uploadTopic"
                android:layout_marginTop="@dimen/_15sdp"
                android:padding="@dimen/_12sdp"
                android:hint="Enter topic name"
                android:gravity="start|center_vertical"
                android:textColor="@color/teal_200"
                android:background="@drawable/rounded_corner"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:id="@+id/uploadDesc"
                android:layout_marginTop="@dimen/_15sdp"
                android:padding="@dimen/_12sdp"
                android:hint="Enter description"
                android:gravity="start|center_vertical"
                android:textColor="@color/teal_200"
                android:background="@drawable/rounded_corner"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:id="@+id/uploadPrice"
                android:layout_marginTop="@dimen/_15sdp"
                android:padding="@dimen/_12sdp"
                android:hint="Enter preferred price"
                android:gravity="start|center_vertical"
                android:textColor="@color/teal_200"
                android:background="@drawable/rounded_corner"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:text="Send"
                android:backgroundTint="@color/purple_200"
                android:id="@+id/saveButton"
                android:textSize="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_15sdp"
                app:cornerRadius = "@dimen/_15sdp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>